<h1>Conference Rooms<%= link_to 'New Conference Room', new_portal_conference_room_path, class: "btn btn-gray pull-right" %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @conference_rooms.each do |conference_room| %>
      <tr>
        <td><%= conference_room.name %></td>
        <td><%= link_to 'Book Now', new_portal_conference_room_booking_path(:conference_room_id => conference_room.id) %></td>
        <td><%= link_to '', portal_conference_room_url(conference_room), class: "fa fa-eye fa-1x gray" %></td>
        <td><%= link_to '', edit_portal_conference_room_path(conference_room), class: "fa fa-pencil-square-o fa-1x gray" %></td>
        <td><%= link_to '', portal_conference_room_url(conference_room), method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash fa-1x gray" %></td>
      </tr>
    <% end %>
  </tbody>
</table>