<h1>Bookings</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Conference Room Name</th>
      <th>Booked By</th>
      <th>Created At</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= ConferenceRoom.find(booking.conference_room_id).name %></td>
        <td><%= User.find(booking.user_id).name %></td>
        <td><%= booking.created_at.localtime.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= booking.start_time.localtime.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= booking.end_time.localtime.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= booking.status %></td>
        <td><%= link_to 'Cancel', cancel_portal_booking_path(:id => booking.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>