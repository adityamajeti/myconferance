<h1>Users<%= link_to 'New User', new_portal_user_path, class: "btn btn-gray pull-right" %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= link_to '', portal_user_url(user), class: "fa fa-eye fa-1x gray" %></td>
        <td><%= link_to '', edit_portal_user_path(user), class: "fa fa-pencil-square-o fa-1x gray" %></td>
        <td><%= link_to '', portal_user_url(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash fa-1x gray" %></td>
      </tr>
    <% end %>
  </tbody>
</table>